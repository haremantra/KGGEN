# KGGEN-CUAD Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys (Required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=kggen
POSTGRES_PASSWORD=kggen_dev_password
POSTGRES_DB=kggen_cuad
DATABASE_URL=postgresql+asyncpg://kggen:kggen_dev_password@localhost:5432/kggen_cuad

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=kggen_dev_password

# Redis
REDIS_URL=redis://localhost:6379/0

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# =============================================================================
# LLM Configuration
# =============================================================================
# Primary LLM (Claude Sonnet 3.5)
PRIMARY_LLM_MODEL=claude-sonnet-4-20250514
PRIMARY_LLM_PROVIDER=anthropic

# Fallback LLM (GPT-4o)
FALLBACK_LLM_MODEL=gpt-4o
FALLBACK_LLM_PROVIDER=openai

# LLM Settings
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# =============================================================================
# Pipeline Configuration
# =============================================================================
# Extraction
EXTRACTION_BATCH_SIZE=5
EXTRACTION_MAX_RETRIES=3

# Resolution
RESOLUTION_CLUSTER_SIZE=128
RESOLUTION_RETRIEVAL_K=16
RESOLUTION_SIMILARITY_THRESHOLD=0.85

# Search
SEARCH_BM25_WEIGHT=0.5
SEARCH_SEMANTIC_WEIGHT=0.5
SEARCH_TOP_K=10
SEARCH_EXPANSION_HOPS=2

# =============================================================================
# Storage Paths
# =============================================================================
CONTRACTS_DIR=./cuad_contracts
CACHE_DIR=./cache
LOGS_DIR=./logs
